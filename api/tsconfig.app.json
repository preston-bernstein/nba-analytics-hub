{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "composite": true,
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@nba-analytics-hub/types": ["../packages/types/dist/src/index.d.ts"],
      "@nba-analytics-hub/testing": ["../packages/testing/dist/src/index.d.ts"],
      "@nba-analytics-hub/data-access": ["../packages/data-access/dist/src/index.d.ts"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../packages/types/tsconfig.lib.json"
    },
    {
      "path": "../packages/testing/tsconfig.lib.json"
    },
    {
      "path": "../packages/data-access/tsconfig.lib.json"
    }
  ]
}
