{
  "name": "@nba-analytics-hub/web",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/vite:build",
        "outputs": ["{options.outputPath}"],
        "options": {
          "outputPath": "web/dist"
        }
      },
      "serve": {
        "executor": "@nx/vite:dev-server",
        "dependsOn": ["clean-api-dist"],
        "options": {
          "buildTarget": "@nba-analytics-hub/web:build"
        }
      },
      "lint": {
        "executor": "@nx/eslint:lint",
        "options": {
          "lintFilePatterns": ["web/**/*.ts", "web/**/*.tsx"]
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "vitest",
          "cwd": "web"
        }
      },
      "clean-api-dist": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node ../tools/clean-api-dist.mjs",
          "cwd": "web"
        }
      },
      "dev": {
        "executor": "nx:run-commands",
        "dependsOn": ["clean-api-dist"],
        "options": {
          "command": "vite",
          "cwd": "web"
        }
      },
      "preview": {
        "executor": "nx:run-commands",
        "dependsOn": ["clean-api-dist", "build"],
        "options": {
          "command": "vite preview",
          "cwd": "web"
        }
      }
    }
  }
}
