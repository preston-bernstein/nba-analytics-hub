{
  "name": "@nba-analytics-hub/ui",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@nba-analytics-hub/source": "./src/index.ts",
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "dependencies": {
    "@nba-analytics-hub/types": "0.0.1",
    "@nba-analytics-hub/domain": "0.0.1",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.453.0",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@storybook/react-vite": "10.1.2",
    "@testing-library/jest-dom": "^6.9.1",
    "shadcn": "^3.5.1"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "dependsOn": [
          "@nba-analytics-hub/types:build",
          "@nba-analytics-hub/domain:build"
        ],
        "options": {
          "tsConfig": "packages/ui/tsconfig.lib.json",
          "main": "packages/ui/src/index.ts",
          "outputPath": "packages/ui/dist",
          "format": ["esm"]
        }
      },
      "lint": {
        "executor": "@nx/eslint:lint",
        "options": {
          "lintFilePatterns": ["packages/ui/**/*.ts", "packages/ui/**/*.tsx"]
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "vitest run",
          "cwd": "packages/ui"
        }
      }
    }
  }
}
