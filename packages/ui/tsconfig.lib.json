{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false, // override root noEmit
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "jsx": "react-jsx",

    // for shadcn-style "@/..." imports inside ui
    "baseUrl": "./src",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/components/*": ["lib/components/*"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../domain/tsconfig.lib.json"
    },
    {
      "path": "../types/tsconfig.lib.json"
    }
  ]
}
